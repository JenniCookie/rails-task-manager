<div class="all_tasks">

  <h1>My tasks</h1>

  <ul>
    <% @tasks.each do |task|%>
        <li>
          <input type ="checkbox"><%= link_to task.title, task_path(task) %> <i class="fas fa-trash-alt"></i>
        </li>
    <% end %>
  </ul>

<hr>
  <div>
    <i class="fas fa-plus"></i><%= link_to "Add a new task", tasks_new_path %>
  </div>

</div>
